<resources>

    <!-- Base application theme. -->
    <!-- LightMode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/happeningRed</item>
        <item name="colorPrimaryDark">#80000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#ffffff</item>
        <item name="cardbackgroundcolor">#000000</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor">#C9C9C9</item>



    </style>

    <!-- DarkMode -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#80000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#D2303030</item>
        <item name="cardbackgroundcolor">#FFFFFF</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">@color/happeningRed</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>